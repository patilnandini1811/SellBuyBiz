"use client";
import React from "react";
import { useEffect, useState } from "react";
import { createClient } from "../../supabase/client"; 


import companiesData from "../../app/companies/companyList.json";

type Company = {
  id: number;
  name: string;
  description: string;
  price: number;
  industry: string;
  image: string;
  seller: string;
};

export default function CompanyList() {
  const [isLoggedIn, setIsLoggedIn] = useState<boolean>(false);
  const supabase = createClient();

  useEffect(() => {
    const checkUser = async () => {
      const { data } = await supabase.auth.getSession();
      setIsLoggedIn(!!data.session);
    };
    checkUser();
  }, []);

  return (
    <div className="p-6">
      <h1 className="text-3xl font-bold mb-6">Companies for Sale</h1>
      <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
        {companiesData.map((company: Company) => (
          <div
            key={company.id}
            className="bg-white shadow-md rounded-lg p-4 border"
          >
            <img
              src={company.image}
              alt={company.name}
              className="w-full h-48 object-cover rounded-md mb-4"
            />
            <h2 className="text-xl font-semibold">{company.name}</h2>
            <p className="text-gray-600">{company.description}</p>
            <p className="text-sm mt-2">Industry: {company.industry}</p>

            {!isLoggedIn ? (
              <p className="text-red-500 mt-2">
                ðŸ”’ Log in to see price and seller details
              </p>
            ) : (
              <>
                <p className="mt-2 font-semibold">ðŸ’° Price: {company.price} SEK</p>
                <p className="text-sm">ðŸ“¦ Seller: {company.seller}</p>
              </>
            )}
          </div>
        ))}
      </div>
    </div>
  );
}
